---
import Layout from "../layouts/Layout.astro";
import ChatAnalyzer from "../components/analysis/ChatAnalyzer";

const title = "Home Page";
const speechKey = import.meta.env.SPEECH_KEY;
const speechRegion = import.meta.env.SPEECH_REGION;
---

<Layout title={title}>
  <div class="text-center mb-8">
    <h1 class="font-bold">Analyze calls with Callnalysis</h1>
    <p class="text-slate-600">Press start when you are in a call</p>
  </div>
  <ChatAnalyzer
    client:visible
    speechKey={speechKey}
    speechRegion={speechRegion}
  />
</Layout>
